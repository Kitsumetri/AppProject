<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:color="#E4D5BE">


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:background="#E9E4C6"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />

     <TextView
         android:id="@+id/set1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="100dp"
         android:fontFamily="@font/main_font"
         android:text="Настройка1"
         android:textSize="50sp"
         android:textColor="#7F4E40"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBaseline_toBottomOf="parent"/>

     <TextView
         android:id="@+id/set2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="90dp"
         android:fontFamily="@font/main_font"
         android:text="Настройка2"
         android:textSize="50sp"
         android:textColor="#7F4E40"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/set1"
         app:layout_constraintBottom_toTopOf="@+id/set3"/>

     <TextView
         android:id="@+id/set3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="90dp"
         android:fontFamily="@font/main_font"
         android:text="Настройка3"
         android:textSize="50sp"
         android:textColor="#7F4E40"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/set2"
         app:layout_constraintBottom_toTopOf="@+id/set4"/>

     <TextView
         android:id="@+id/set4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:fontFamily="@font/main_font"
         android:layout_marginTop="110dp"
         android:text="Настройка4"
         android:textSize="50sp"
         android:textColor="#7F4E40"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toBottomOf="@+id/set3"
         app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>